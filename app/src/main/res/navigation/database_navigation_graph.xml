<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/database_navigation_graph"
    app:startDestination="@id/databaseLoginFragment">

    <fragment
        android:id="@+id/databaseLoginFragment"
        android:name="com.example.group28assignmentapp.database.DatabaseLoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_database_login" >
        <action
            android:id="@+id/action_databaseLoginFragment_to_receivedFragment"
            app:destination="@id/receivedFragment" />
    </fragment>
    <fragment
        android:id="@+id/receivedFragment"
        android:name="com.example.group28assignmentapp.database.receivedFragment"
        android:label="Received Stickers"
        tools:layout="@layout/fragment_received" >
        <action
            android:id="@+id/action_receivedFragment_to_sentFragment"
            app:destination="@id/sentFragment" />
    </fragment>
    <fragment
        android:id="@+id/sentFragment"
        android:name="com.example.group28assignmentapp.database.sentFragment"
        android:label="Sent Stickers"
        tools:layout="@layout/fragment_sent" />
</navigation>